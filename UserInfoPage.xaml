<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app.UserInfoPage"
             Title="UserInfoPage"
             Appearing="OnAppearing">
    <VerticalStackLayout>
        <Label 
            x:Name="UserInfoString"
            Text="user_info"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
            x:Name="LogoutBtn"
            Text="Logout"
            SemanticProperties.Hint="Ends a session"
            Clicked="LogoutClick"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>